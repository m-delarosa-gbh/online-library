{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "strictPropertyInitialization": false,
    "module": "CommonJS",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    },
    "include": ["src/**/*"],
    "exclude": ["online-library/client/dist"]
}
