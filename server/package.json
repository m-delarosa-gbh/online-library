{
  "name": "library-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "create-db": "psql -U postgres < ./schema/bookschema.sql",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "typeorm migration:create",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run --dataSource src/conf/data-source.ts",
    "seed": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run  -d src/conf/data-source.ts"
  },
